<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_36dp"
        android:paddingLeft="@dimen/dimen_32dp"
        android:paddingRight="@dimen/dimen_16dp"
        android:paddingTop="@dimen/dimen_36dp">

        <ImageView
            android:layout_width="@dimen/dimen_32dp"
            android:layout_height="@dimen/dimen_44dp"
            android:src="@drawable/zhy_store_order_details_info_user" />

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_46dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="订单信息"
                    android:textColor="@color/zhy_text_color_20"
                    android:textSize="@dimen/dimen_28dp" />

                <TextView
                    android:id="@+id/tv_order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/zhy_text_color_21"
                    android:textSize="@dimen/dimen_28dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_service_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:gravity="center_vertical"
                android:text="服务地址："
                android:textColor="@color/zhy_text_color_20"
                android:textSize="@dimen/dimen_24dp" />

            <TextView
                android:id="@+id/tv_plan_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:gravity="center_vertical"
                android:text="预约时间："
                android:textColor="@color/zhy_text_color_20"
                android:textSize="@dimen/dimen_24dp" />


            <TextView
                android:id="@+id/tv_service_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:gravity="center_vertical"
                android:text="服务类型："
                android:textColor="@color/zhy_text_color_20"
                android:textSize="@dimen/dimen_24dp" />

            <TextView
                android:id="@+id/tv_service_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:gravity="center_vertical"
                android:text="服务对象："
                android:textColor="@color/zhy_text_color_20"
                android:textSize="@dimen/dimen_24dp" />

            <TextView
                android:id="@+id/tv_order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:gravity="center_vertical"
                android:text="金        额："
                android:textColor="@color/zhy_text_color_20"
                android:textSize="@dimen/dimen_24dp" />

            <TextView
                android:id="@+id/tv_order_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:gravity="center_vertical"
                android:text="备        注："
                android:textColor="@color/zhy_text_color_20"
                android:textSize="@dimen/dimen_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_customer_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/zhy_button_state_ll_white"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dimen_18dp"
                    android:paddingTop="@dimen/dimen_18dp">

                    <ImageView
                        android:layout_width="@dimen/dimen_44dp"
                        android:layout_height="@dimen/dimen_44dp"
                        android:src="@drawable/ic_order_phone" />

                    <TextView
                        android:id="@+id/tv_customer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="联系人："
                        android:textColor="@color/zhy_text_color_1"
                        android:textSize="@dimen/dimen_24dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_agent_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_16dp"
                    android:background="@drawable/zhy_button_state_ll_white"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen_44dp"
                        android:layout_height="@dimen/dimen_44dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_order_phone"
                        android:tint="@color/zhy_text_color_19" />

                    <TextView
                        android:id="@+id/tv_agent_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="经办人："
                        android:textColor="@color/zhy_text_color_19"
                        android:textSize="@dimen/dimen_24dp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="@dimen/dimen_20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_expandable"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_12dp"
        android:src="@drawable/zhy_store_order_details_info_line" />
</LinearLayout>