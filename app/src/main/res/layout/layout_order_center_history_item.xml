<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_8dp"
    android:layout_marginLeft="@dimen/dimen_16dp"
    android:layout_marginRight="@dimen/dimen_16dp"
    android:layout_marginTop="@dimen/dimen_8dp"
    android:background="@drawable/zhy_layout_bg_write"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingRight="@dimen/dimen_16dp">

        <TextView
            android:id="@+id/tv_order_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="审核时间："
            android:textColor="@color/zhy_text_color_1"
            android:textSize="@dimen/dimen_28dp" />

        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="asdf"
            android:textColor="@color/zhy_text_color_1"
            android:textSize="@dimen/dimen_28dp" />

        <LinearLayout
            android:id="@+id/ll_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/zhy_button_state_ll_white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dimen_18dp"
            android:paddingTop="@dimen/dimen_18dp">

            <ImageView
                android:layout_width="@dimen/dimen_44dp"
                android:layout_height="@dimen/dimen_44dp"
                android:src="@drawable/ic_order_phone" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="联系人"
                android:textColor="@color/zhy_text_color_1"
                android:textSize="@dimen/dimen_24dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/zhy_line_3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingRight="@dimen/dimen_16dp">

        <TextView
            android:id="@+id/tv_deal_content_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_80dp"
            android:gravity="center_vertical"
            android:text="处理反馈："
            android:textColor="@color/zhy_text_color_20"
            android:textSize="@dimen/dimen_28dp" />

        <TextView
            android:id="@+id/tv_deal_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:text="无"
            android:textColor="@color/zhy_text_color_20"
            android:textSize="@dimen/dimen_28dp" />
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/layout_pics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_pics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_16dp">
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>