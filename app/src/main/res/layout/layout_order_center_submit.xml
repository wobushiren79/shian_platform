<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_80dp"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:gravity="center_vertical"
        android:text="审核内容："
        android:textColor="@color/zhy_text_color_20"
        android:textSize="@dimen/dimen_28dp" />

    <EditText
        android:id="@+id/et_submit_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="top"
        android:hint="请输入审核内容..."
        android:minLines="4"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingRight="@dimen/dimen_16dp"
        android:text=""
        android:textColorHint="@color/zhy_text_color_18"
        android:textSize="@dimen/dimen_28dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:background="@color/zhy_line_3" />

    <com.shianlife.shian_platform.custom.show.ImageUpLoadShowLayout
        android:id="@+id/layout_image_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.shianlife.shian_platform.custom.show.ImageUpLoadShowLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_submit_nopass"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_weight="1"
            android:background="@drawable/zhy_submit_button_style_2"
            android:gravity="center"
            android:text="不通过"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_32dp" />

        <TextView
            android:id="@+id/tv_submit_pass"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_weight="1"
            android:background="@drawable/zhy_submit_button_style_1"
            android:gravity="center"
            android:text="审核通过"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_32dp" />
    </LinearLayout>

</LinearLayout>